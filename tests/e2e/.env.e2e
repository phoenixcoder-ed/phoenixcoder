# PhoenixCoder E2E测试环境变量配置

# 应用基础URL
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
OIDC_BASE_URL=http://localhost:8001

# 测试用户凭据
TEST_USER_EMAIL=test@phoenixcoder.com
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@phoenixcoder.com
TEST_ADMIN_PASSWORD=AdminPassword123!

# 测试数据库配置
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/phoenixcoder_test
TEST_REDIS_URL=redis://localhost:6379/1

# 测试配置
TEST_TIMEOUT=30000
TEST_RETRIES=2
TEST_WORKERS=1

# 浏览器配置
HEADLESS=true
SLOW_MO=0
DEVTOOLS=false

# 录制配置
SCREENSHOT_MODE=only-on-failure
VIDEO_MODE=retain-on-failure
TRACE_MODE=retain-on-failure

# 报告配置
REPORT_DIR=playwright-report
TEST_RESULTS_DIR=test-results

# CI/CD配置
CI=false
GITHUB_ACTIONS=false

# 第三方服务配置（测试环境）
GITHUB_CLIENT_ID=test_github_client_id
GOOGLE_CLIENT_ID=test_google_client_id
STRIPE_PUBLISHABLE_KEY=pk_test_...

# 文件上传测试
TEST_UPLOAD_DIR=/tmp/test-uploads
MAX_FILE_SIZE=10485760

# 邮件测试配置
TEST_SMTP_HOST=localhost
TEST_SMTP_PORT=1025
TEST_EMAIL_FROM=noreply@phoenixcoder.com

# 微信小程序测试配置
WECHAT_APPID=test_wechat_appid
WECHAT_SECRET=test_wechat_secret

# 性能测试配置
PERF_TEST_DURATION=60
PERF_TEST_USERS=10
PERF_TEST_RAMP_UP=30

# 安全测试配置
SECURITY_TEST_ENABLED=true
XSS_TEST_ENABLED=true
SQL_INJECTION_TEST_ENABLED=true

# 可访问性测试配置
A11Y_TEST_ENABLED=true
A11Y_STANDARDS=WCAG2AA

# 视觉回归测试配置
VISUAL_TEST_ENABLED=true
VISUAL_THRESHOLD=0.2
VISUAL_UPDATE_SNAPSHOTS=false