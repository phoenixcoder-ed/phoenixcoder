{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "incremental": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    {
      "path": "../shared-types"
    },
    {
      "path": "../shared-utils"
    },
    {
      "path": "../shared-services"
    }
  ]
}