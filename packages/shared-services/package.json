{
  "name": "@phoenixcoder/shared-services",
  "version": "1.0.0",
  "description": "Shared business services for PhoenixCoder platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "services",
    "api",
    "business-logic",
    "phoenixcoder",
    "typescript"
  ],
  "author": "PhoenixCoder Team",
  "license": "MIT",
  "dependencies": {
    "@phoenixcoder/shared-types": "workspace:*",
    "@phoenixcoder/shared-utils": "workspace:*",
    "axios": "^1.7.9",
    "qs": "^6.13.1",
    "eventemitter3": "^5.0.1",
    "rxjs": "^7.8.1",
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "uuid": "^11.0.3",
    "zod": "^3.24.1",
    "ws": "^8.18.0",
    "socket.io-client": "^4.8.1",
    "nodemailer": "^6.9.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.13",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@types/qs": "^6.9.17",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.7.2",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.17.0",
    "typescript-eslint": "^7.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "jest-environment-node": "^29.7.0",
    "msw": "^2.6.8"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ]
  }
}