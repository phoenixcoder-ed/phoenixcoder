{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/services/*": ["./src/services/*"],
      "@/store/*": ["./src/store/*"],
      "@/assets/*": ["./src/assets/*"],
      "@phoenixcoder/shared-types": ["./packages/shared-types/src/index.ts"],
      "@phoenixcoder/shared-utils": ["./packages/shared-utils/src/index.ts"],
      "@phoenixcoder/shared-components": ["./packages/shared-components/src/index.ts"],
      "@phoenixcoder/shared-services": ["./packages/shared-services/src/index.ts"]
    }
  },
  "include": [
    "src",
    "packages/*/src/**/*",
    "apps/*/src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "references": [
    { "path": "./packages/shared-types" },
    { "path": "./packages/shared-utils" },
    { "path": "./packages/shared-components" },
    {
      "path": "./packages/shared-services"
    },
    {
      "path": "./packages/shared-miniapp"
    },
    { "path": "./apps/community/admin" },
    { "path": "./apps/enterprise/admin" }
  ]
}